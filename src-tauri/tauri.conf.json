{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Native To-do List",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "my todo list",
        "width": 947,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "Robins.Native.Tauri.App",
      "icon": [
        "icons/favicon-16x16.png",
        "icons/favicon-32x32.png",
        "icons/icon63.png",
        "icons/favicon.ico"
      ]
    }
  }
}
